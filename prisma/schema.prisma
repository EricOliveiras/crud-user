generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  full_name  String
  email      String   @unique
  phone      String?
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("user")
}
